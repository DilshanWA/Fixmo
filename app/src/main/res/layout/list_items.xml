<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/itemboxColor"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"> <!-- Add marginBottom here -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/listImage"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />


                <TextView
                    android:id="@+id/discripction"
                    android:layout_width="221dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="17dp"
                    android:layout_toEndOf="@+id/listImage"
                    android:text="discripction"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="107dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/discripction"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="131dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toEndOf="@+id/listImage"
                    android:text="By user_name"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="307dp"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/baseline_favorite_border_24" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="13dp"
                    app:srcCompat="@drawable/baseline_grade2_24" />


                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="134dp"
                    android:layout_toEndOf="@+id/imageView7"
                    android:text="rating"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/charge_perhour"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="128dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@+id/listImage"
                    android:text="$80"
                    android:textSize="12dp" />


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
